    <Copy SourceFiles="@(TypeDefinitions)" DestinationFolder="$(XrmSolutionsRoot)\solutions\TypeDefinitions\ScenarioConfiguration\%(RecursiveDir)" Retries="3" RetryDelayMilliseconds="300" />
  </Target>
</Project>